<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><!--suppress ALL --><mapper namespace="User">    <select id="findById" parameterType="string" resultType="User">        <![CDATA[                                                SELECT                                                    id      AS id,                                                    nm      AS name,                                                    pwd     AS password,                                                    dob     AS dob                                                FROM                                                    t_user                                                WHERE                                                    id = #{id}        ]]>    </select></mapper>